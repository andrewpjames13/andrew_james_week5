<div class="page-header">
  <h1>Locations</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Adderss</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |l| %>
    <tr>
      <td><%= link_to l.name, l %></td>
      <td><%= l.address %></td>
      <td><%= l.zip_code %></td>
      <td class="text-right">
        <%= link_to 'Edit', edit_location_path(l), class:"btn btn-info" %>
        <%= link_to 'Create Event', new_location_event_path(l), class:"btn btn-info" %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
