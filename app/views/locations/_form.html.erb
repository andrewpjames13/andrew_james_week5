<%= form_for(@location, html: {class: "form-horizontal"}) do |f| %>
<% if @location.errors.any? %>
<div id="error_explanation">

  <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>


  <ul>
    <% @location.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :name %></label>
  <div class="form-controls col-md-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :address %></label>
  <div class="form-controls col-md-4">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :zip_code %></label>
  <div class="form-controls col-md-4">
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="actions">
    <div class="col-md-offset-2 col-md-4">
      <input class="btn btn-primary" <%= f.submit %>
      <%= link_to 'cancel', locations_path, class:"btn btn-default" %>

    </div>
  </div>

</div>

<% end %>
